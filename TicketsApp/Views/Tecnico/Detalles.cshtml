@model TicketsApp.Models.ViewModels.TicketDetallesViewModel

@{
    ViewData["Title"] = "Detalles del Ticket";
    Layout = "~/Views/Shared/_LayoutTecnico.cshtml";
}

<h2>Detalles del Ticket #@Model.TicketId</h2>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
}


<div class="card p-3 mb-4">
    <h4>@Model.Titulo</h4>
    <p><strong>Usuario Creador:</strong> @Model.NombreUsuarioCreador</p>
    <p><strong>Aplicación Afectada:</strong> @Model.AplicacionAfectada</p>
    <p><strong>Descripción:</strong> @Model.Descripcion</p>
    <p><strong>Categoría:</strong> @Model.Categoria.Nombre</p>
    <p><strong>Estado:</strong> <span id="estado-actual">@Model.Estado.NombreEstado</span></p>
    <p><strong>Prioridad:</strong> @Model.Prioridad</p>
    <p><strong>Fecha de Creación:</strong> @Model.FechaCreacion?.ToString("dd/MM/yyyy HH:mm")</p>
</div>

<!-- Cambiar Estado -->
<div class="d-flex align-items-end gap-2 mb-4">
    <!-- Formulario para Cambiar Estado -->
    <form asp-action="CambiarEstado" asp-controller="Tecnico" method="post" class="mb-0">
        <input type="hidden" name="ticketId" value="@Model.TicketId" />
        <div class="form-group">
            <select asp-for="EstadoId" asp-items="@(new SelectList((List<TicketsApp.Models.EstadoTicket>)ViewBag.Estados, "EstadoId", "NombreEstado", Model.EstadoId))" class="form-control" required id="estadoSelect">
                <option value="">Seleccione un estado</option>
            </select>
            <span asp-validation-for="EstadoId" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-2">Actualizar Estado</button>
    </form>

    <!-- Botón para Cerrar Ticket -->
    <form asp-action="CerrarTicket" asp-controller="Tecnico" method="post" id="cerrarTicketForm" class="mb-0">
        <input type="hidden" name="ticketId" value="@Model.TicketId" />
        <button type="button" class="btn btn-danger mt-2" onclick="confirmarCerrar()">Cerrar Ticket</button>
    </form>
</div>


<!-- Comentarios -->
<div class="card mb-4">
    <div class="card-header">Comentarios</div>
    <div class="card-body">
        @foreach (var comentario in Model.ComentariosTicket.OrderByDescending(c => c.FechaComentario))
        {
            <div class="mb-2">
                <strong>@comentario.Usuario?.Nombre:</strong> <br />
                @comentario.Comentario
                <div class="text-muted"><small>@comentario.FechaComentario?.ToString("dd/MM/yyyy HH:mm")</small></div>
            </div>
        }
    </div>
</div>

<!-- Agregar Comentario -->
<form asp-action="AgregarComentario" asp-controller="Tecnico" method="post">
    <input type="hidden" name="ticketId" value="@Model.TicketId" />
    <div class="form-group">
        <label for="comentario">Agregar Comentario:</label>
        <textarea name="comentario" class="form-control" required rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-success mt-2">Guardar Comentario</button>
</form>

<!-- Adjuntos -->
<div class="card mt-5">
    <div class="card-header">Archivos Adjuntos</div>
    <div class="card-body">
        @if (Model.Adjunto.Any())
        {
            <ul>
                @foreach (var adjunto in Model.Adjunto)
                {
                    <li>
                        <a asp-action="DescargarAdjunto" asp-route-adjuntoId="@adjunto.AdjuntoId">
                            @adjunto.NombreArchivo
                        </a> - @adjunto.FechaSubida?.ToString("dd/MM/yyyy HH:mm")
                    </li>
                }
            </ul>
        }
        else
        {
            <p>No hay archivos adjuntos.</p>
        }

        <!-- Subir nuevos -->
        <form asp-action="SubirAdjunto" asp-controller="Tecnico" method="post" enctype="multipart/form-data" class="mt-3">
            <input type="hidden" name="ticketId" value="@Model.TicketId" />
            <div class="form-group">
                <label>Subir archivos:</label>
                <input type="file" name="archivos" multiple class="form-control" required />
            </div>
            <button type="submit" class="btn btn-secondary mt-2">Subir</button>
        </form>
    </div>
</div>
<a asp-action="TicketsAsignados" asp-controller="Tecnico" class="btn btn-secondary mt-3">
    <i class="fas fa-arrow-left me-1"></i>Regresar a Tickets Asignados
</a>

@section Scripts {
    <script>
        setTimeout(() => {
            const alert = document.querySelector('.alert');
            if (alert) {
                alert.classList.remove('show');
                alert.classList.add('fade');
                setTimeout(() => alert.remove(), 500);
            }
        }, 4000); // se oculta en 4 segundos

        function confirmarCerrar() {
            if (confirm("¿Estás seguro que deseas cerrar este ticket? Esta acción no se puede deshacer.")) {
                document.getElementById("cerrarTicketForm").submit();
            }
        }
    </script>
}