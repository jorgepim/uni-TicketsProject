@model List<TicketsApp.Models.Ticket>

@{
    ViewData["Title"] = "Tickets Asignados";
    Layout = "~/Views/Shared/_LayoutTecnico.cshtml";
}

<style>
    .filtro-btn {
        background-color: #4a6793;
        color: white;
        font-weight: 600;
        border-radius: 20px;
        padding: 8px 20px;
        border: none;
    }

    .tabla-contenedor {
        border-radius: 16px;
        overflow: hidden;
        background-color: white;
    }

    .tabla-tickets {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 8px;
    }

    .tabla-tickets th, .tabla-tickets td {
        padding: 12px;
        text-align: left;
    }

    .btn-detalles {
        background-color: #4a6793;
        color: white;
        font-weight: 500;
        border-radius: 12px;
        padding: 5px 14px;
        font-size: 0.85rem;
        border: none;
    }

    .seccion-tickets {
        background-color: #dcdde3;
        border-radius: 20px;
        padding: 30px;
    }

    .tabla-tickets thead {
        background-color: #f2f2f2;
        font-weight: bold;
    }
</style>

<div class="container mt-4">

    <div class="seccion-tickets">
        <h4 class="text-primary fw-semibold mb-4">Tickets Asignados</h4>

        <!-- Filtros (opcional, sin funcionalidad por ahora) -->
        <div class="mb-4 d-flex gap-3">
            <button class="filtro-btn">Aplicación</button>
            <button class="filtro-btn">Prioridad</button>
        </div>

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info">No tienes tickets asignados en este momento.</div>
        }
        else
        {
            <!-- Tabla -->
            <div class="tabla-contenedor">
                <table class="tabla-tickets w-100">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Título</th>
                            <th>Aplicación</th>
                            <th>Estado</th>
                            <th>Prioridad</th>
                            <th>Fecha Creación</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ticket in Model)
                        {
                            <tr style="border-bottom: 1px solid #ccc;">
                                <td>@ticket.TicketId.ToString("00")</td>
                                <td>@ticket.Titulo</td>
                                <td>@ticket.AplicacionAfectada</td>
                                <td>@ticket.Estado?.NombreEstado</td>
                                <td>@ticket.Prioridad</td>
                                <td>@ticket.FechaCreacion?.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <a asp-controller="Tecnico" asp-action="Detalles" asp-route-id="@ticket.TicketId" class="btn-detalles">
                                        Ver Detalles
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
