@model List<TicketsApp.Models.Notificacion>

@if (!Model.Any())
{
    <div class="text-muted text-center">No tienes notificaciones nuevas.</div>
}
else
{
    <ul class="list-group list-group-flush">
        @foreach (var n in Model)
        {
            <li class="list-group-item">
                <strong>@n.Mensaje</strong><br />
                <small class="text-muted">@n.FechaEnvio?.ToString("dd/MM/yyyy HH:mm")</small>
            </li>
        }
    </ul>
}
