@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="login-container d-flex flex-column justify-content-center align-items-center">
    <img src="~/media/FIX.svg" alt="Logo" width="35%"/>
    <form class="d-flex flex-column gap-3 justify-content-center align-items-center">
        <div class="position-relative">
            <input type="text" class="form-control input-login" id="username" placeholder="Correo Electrónico">
            <i class="bi bi-person-circle position-absolute icon-input"></i>
        </div>
        <div class="position-relative">
            <input type="password" class=" input-login" id="password" placeholder="Contraseña">
            <i class="bi bi-lock-fill position-absolute icon-input"></i>
            <i class="bi bi-eye-slash position-absolute toggle-password" id="togglePassword"></i>
        </div>
        <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
    </form>
    <div>

    </div>
</div>

<style>
    .login-container {
        height: 60vh;
        width:60vw;
        background-color: #4A6B96;
        padding: 20px;
        border-radius: 20px;
    }

    .input-login {
        width:35vw;
        background-color: #D9D9D9;
        border: none;
        border-radius: 25px;
        padding-left: 60px;
        height: 45px;
        font-size: 16px;
        color: black;
    }

        .input-login:focus {
            outline: none;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
        }

    .icon-input {
        font-size: 1.3rem;
        color: #4A6B96;
        left: 15px;
        top: 7px;
        pointer-events: none;
    }

    .toggle-password {
        font-size: 1.3rem;
        color: #4A6B96;
        right: 15px;
        top: 7px;
        cursor: pointer;
        pointer-events: auto;

</style>

<script>
    // JavaScript para alternar visibilidad de la contraseña
    document.getElementById("togglePassword").addEventListener("click", function () {
        const passwordInput = document.getElementById("password");
        const icon = this;

        // Alternar tipo de input (password a text)
        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            icon.classList.remove("bi-eye-slash");
            icon.classList.add("bi-eye");
        } else {
            passwordInput.type = "password";
            icon.classList.remove("bi-eye");
            icon.classList.add("bi-eye-slash");
        }
    });
</script>