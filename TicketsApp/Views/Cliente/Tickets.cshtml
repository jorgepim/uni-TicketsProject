@{
    ViewData["Title"] = "Tickest";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">

    <div class="ticket-panel p-4 rounded-4 shadow-sm">
        <h5 class="fw-semibold text-primary mb-4">Tickets Enviados</h5>

        <!-- Ticket Card -->
        <div class="ticket-card d-flex justify-content-between align-items-center p-3 mb-3 border-bottom">
            <div class="d-flex gap-3 align-items-center">
                <i class="bi bi-ticket-perforated-fill fs-2 text-primary"></i>
                <div>
                    <div class="fw-bold text-primary">Título del Ticket</div>
                    <div class="small text-muted">Estado: Activo</div>
                    <div class="small text-muted">Prioridad:</div>
                    <div class="small text-muted">Fecha: 03 - 05 - 2025</div>
                </div>
            </div>
            <a href="#" class="btn btn-primary btn-sm">Ver Más</a>
        </div>

        <!-- Repetir bloque de arriba para más tickets -->
        <div class="ticket-card d-flex justify-content-between align-items-center p-3 mb-3 border-bottom">
            <div class="d-flex gap-3 align-items-center">
                <i class="bi bi-ticket-perforated-fill fs-2 text-primary"></i>
                <div>
                    <div class="fw-bold text-primary">Título del Ticket</div>
                    <div class="small text-muted">Estado: Activo</div>
                    <div class="small text-muted">Prioridad:</div>
                    <div class="small text-muted">Fecha: 01 - 05 - 2025</div>
                </div>
            </div>
            <a href="#" class="btn btn-primary btn-sm">Ver Más</a>
        </div>

        <div class="ticket-card d-flex justify-content-between align-items-center p-3">
            <div class="d-flex gap-3 align-items-center">
                <i class="bi bi-ticket-perforated-fill fs-2 text-primary"></i>
                <div>
                    <div class="fw-bold text-primary">Título del Ticket</div>
                    <div class="small text-muted">Estado: Activo</div>
                    <div class="small text-muted">Prioridad:</div>
                    <div class="small text-muted">Fecha: 02 - 05 - 2025</div>
                </div>
            </div>
            <a href="#" class="btn btn-primary btn-sm">Ver Más</a>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #fff4e9;
    }

    .ticket-panel {
        background-color: #d9d9d9;
    }

    .ticket-card:last-child {
        border-bottom: none;
    }

    .ticket-card .btn {
        background-color: #4A6B96;
        border: none;
    }

        .ticket-card .btn:hover {
            background-color: #36527A;
        }
</style>
