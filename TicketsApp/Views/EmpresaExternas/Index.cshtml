@model IEnumerable<TicketsApp.Models.EmpresaExterna>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreEmpresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactoPrincipal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelefonoEmpresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DireccionEmpresa)
            </th>
            <th></th>
        </tr>
